{
  "name": "react-lexical-editor",
  "version": "0.1.0",
  "description": "A rich text editor library for React using Lexical",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/altricade/react-lexical-editor.git"
  },
  "homepage": "https://github.com/altricade/react-lexical-editor#readme",
  "bugs": {
    "url": "https://github.com/altricade/react-lexical-editor/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "node scripts/build.js",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "test": "jest",
    "lint": "eslint src/**/*.{ts,tsx}",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "playground": "cd playground && npm run dev",
    "prepublishOnly": "npm run lint && npm test && npm run build"
  },
  "keywords": [
    "react",
    "editor",
    "lexical",
    "rich-text",
    "wysiwyg"
  ],
  "author": "Zaid Omar <omar.m.zaid@hotmail.com> (https://altricade.com)",
  "license": "MIT",
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@lexical/react": "^0.32.1",
    "lexical": "^0.32.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "prettier": "^3.6.0",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
